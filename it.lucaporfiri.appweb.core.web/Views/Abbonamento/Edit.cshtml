@model it.lucaporfiri.appweb.core.web.Models.Abbonamento

@{
    ViewData["Title"] = "Modifica Abbonamento";
}

<div class="dashboard-container">
    <header class="page-header-details">
        <div class="header-content">
            <a asp-action="Details" asp-controller="Abbonamento" asp-route-id="@Model.Id" class="btn-back" title="Torna all'abbonamento">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div class="header-title">
                <h1>
                    <i class="fa-solid fa-pen-to-square"></i>
                    Modifica Abbonamento
                </h1>
                <p class="subtitle">@Model.Nome</p>
            </div>
        </div>
    </header>
    <section>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <input type="hidden" asp-for="Id" />
            <div class="form-grid">
                <div class="form-field">
                    <label asp-for="DataInizio">Data Inizio<span class="required-asterisk">*</span></label>
                    <input asp-for="DataInizio" type="date" />
                    <span asp-validation-for="DataInizio" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="DataFine">Data Fine<span class="required-asterisk">*</span></label>
                    <input asp-for="DataFine" type="date" />
                    <span asp-validation-for="DataFine" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="AtletaId">Atleta<span class="required-asterisk">*</span></label>
                    <select asp-for="AtletaId" asp-items="ViewBag.AtletaId">
                        <option value="">-- Seleziona un atleta --</option>
                    </select>
                    <span asp-validation-for="AtletaId" class="validation-error"></span>
                </div>
            </div>
            <div class="form-actions">
                <div></div>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-save"></i>
                    Salva Modifiche
                </button>
            </div>
        </form>
    </section>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}