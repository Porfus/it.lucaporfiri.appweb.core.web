@model it.lucaporfiri.appweb.core.web.Models.Abbonamento

@{
    // --- Logica di Calcolo per lo Stato e il Countdown ---
    ViewData["Title"] = "Dettaglio Abbonamento";
    bool isScaduto = Model.DataFine < DateTime.Today;
    var giorniRimanenti = (Model.DataFine - DateTime.Today).Days;

    string statusClass = isScaduto ? "status-scaduto" : "status-ok";
    string statusText = isScaduto ? "Scaduto" : "Attivo";
    string countdownText;

    if (isScaduto)
    {
        countdownText = $"Scaduto da {-giorniRimanenti} giorni";
    }
    else if (giorniRimanenti == 0)
    {
        countdownText = "Scade Oggi";
    }
    else
    {
        countdownText = $"Scade tra {giorniRimanenti + 1} giorni";
    }
}
<div class="dashboard-container">

    <!-- =========== HEADER DELLA PAGINA =========== -->
    <header class="page-header-details">
        <div class="header-content">
            <!-- Bottone per tornare indietro alla pagina dell'atleta -->
            <a asp-action="Details" asp-controller="Atleta" asp-route-id="@Model.AtletaId" class="btn-back" title="Torna al profilo atleta">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div class="header-title">
                <h1>Dettaglio Abbonamento</h1>
                <p class="subtitle">@Model.Nome</p>
            </div>
        </div>
    </header>

    <!-- =========== CARD PRINCIPALE CON I DETTAGLI =========== -->
    <section class="details-card">

        <!-- Riepilogo Visivo con le info chiave -->
        <div class="info-grid">
            <div class="info-item">
                <span class="label">Stato</span>
                <span class="status @statusClass">@statusText</span>
            </div>
            <div class="info-item">
                <span class="label">Countdown Scadenza</span>
                <strong class="value">@countdownText</strong>
            </div>
            <div class="info-item">
                <span class="label">Data Inizio</span>
                <strong class="value">@Model.DataInizio.ToString("dd MMMM yyyy")</strong>
            </div>
            <div class="info-item">
                <span class="label">Data Fine</span>
                <strong class="value">@Model.DataFine.ToString("dd MMMM yyyy")</strong>
            </div>
        </div>

        <!-- Linea di separazione -->
        <hr class="separator" />

        <!-- Link all'atleta associato -->
        <div class="athlete-link-section">
            <span class="label">Abbonamento di:</span>
            <a asp-action="Details" asp-controller="Atleta" asp-route-id="@Model.AtletaId">
                <i class="fas fa-user-circle"></i>
                <span>@Model.Atleta?.Nome @Model.Atleta?.Cognome</span>
            </a>
        </div>

        <!-- Sezione Azioni -->
        <footer class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-pencil-alt"></i> Modifica
            </a>
            <!-- Aggiunta del bottone Elimina, che porta a una pagina di conferma -->
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger-outline">
                <i class="fas fa-trash-alt"></i> Elimina
            </a>
        </footer>
    </section>

</div>