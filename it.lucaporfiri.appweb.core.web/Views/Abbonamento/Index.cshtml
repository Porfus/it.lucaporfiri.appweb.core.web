@using static it.lucaporfiri.appweb.core.web.ViewModels.AtletaDetailViewModel
@model IEnumerable<it.lucaporfiri.appweb.core.web.ViewModels.AbbonamentoDetailViewModel>

<div class="dashboard-container">
    <section class="main-content">
        <div class="dashboard-header" style="margin-bottom: 25px;">
            <h2><i class="fas fa-calendar-times"></i> Elenco Abbonamenti</h2>
            <div class="main-actions">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Crea Nuovo
                </a>
            </div>
        </div>
        <div class="table-content">
            <table class="compact-table">
    <thead>
        <tr>
            <th>
                Data Inizio
            </th>
            <th>
                Data Fine
            </th>
            <th>
                Atleta
            </th>
            <th>
                Stato Abbonamento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.abbonamento.DataInizio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.abbonamento.DataFine)
            </td>
            <td>
                @($"{item.abbonamento.Atleta?.Nome} {item.abbonamento.Atleta?.Cognome}")
            </td>
            <td>
                @if (item.statoAbbonamento == StatoAbbonamento.Scaduto)
                {
                    <span class="c-error">@item.statoAbbonamento</span>
                }
                    else if (item.statoAbbonamento == StatoAbbonamento.Valido)
                {
                    <span class="c-success">@item.statoAbbonamento</span>
                }
                else
                {
                    <span class="c-warning">@item.statoAbbonamento</span>
                }

            </td>
            <td class="table-actions text-right">
                <a asp-action="Edit" asp-route-id="@item.abbonamento.Id">Modifica</a> |
                <a asp-action="Details" asp-route-id="@item.abbonamento.Id">Dettagli</a> |
                <a asp-action="Delete" asp-route-id="@item.abbonamento.Id">Elimina</a>
            </td>
        </tr>
}
    </tbody>
</table>
        </div>
    </section>
</div>


