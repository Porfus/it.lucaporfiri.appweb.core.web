@using it.lucaporfiri.appweb.core.web.Models
@using static it.lucaporfiri.appweb.core.web.Models.Atleta
@model IEnumerable<it.lucaporfiri.appweb.core.web.Models.Atleta>

@{
    ViewData["Title"] = "Elenco Atleti";
}

<div class="dashboard-container">
    <section class="main-content">

        <div class="dashboard-header" style="margin-bottom: 25px;">
			<h2>
				<a asp-action="Index" asp-controller="Home" class="btn-back" title="Torna alla dashboard">
					<i class="fas fa-arrow-left"></i>
				</a><i class="fas fa-users"></i> Elenco Atleti
			</h2>
            <div class="main-actions">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Crea Nuovo
                </a>
            </div>
        </div>

        <div class="table-container">
            <table class="compact-table">
                <thead>
                    <tr>
                        <!-- Tutte le tue colonne originali -->
                        <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Cognome)</th>
                        <th>Anno Di Nascita</th>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Telefono)</th>
                        <th>Data di inizio iscrizione</th>
                        <th>@Html.DisplayNameFor(model => model.First().Tipo)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Stato)</th>
                        <th class="text-right">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.Nome)</strong></td>
                            <td><strong>@Html.DisplayFor(modelItem => item.Cognome)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.AnnoDiNascita)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>@Html.DisplayFor(modelItem => item.DataInizioIscrizione)</td>
                            <td>
                                @{
                                    var tipoClass = item.Tipo.ToString().ToLower() switch
                                    {
                                        "personal" => "status-personal",
                                        "corso" => "status-corso",
                                        "solascheda" => "status-soloscheda",
                                        _ => "status-notdefined"
                                    };
                                }
                                <span class="status @tipoClass">@Html.DisplayFor(modelItem => item.Tipo)</span>
                            </td>
                            <td>
                                @{
                                    var statoClass = item.Stato switch
                                    {
                                        StatoCliente.Attivo => "status-ok",
                                        StatoCliente.NonAttivo => "status-scaduto",
                                        _ => "status-notdefined"
                                    };
                                }
                                <span class="status @statoClass">@Html.DisplayFor(modelItem => item.Stato)</span>
                            </td>
                            <td class="table-actions text-right">
                                <!-- Link di azione testuali, stilizzati e compatti -->
                                <a asp-action="Edit" asp-route-id="@item.Id">Modifica</a>
                                <span class="separator">|</span>
                                <a asp-action="Details" asp-route-id="@item.Id">Dettagli</a>
                                <span class="separator">|</span>
                                <a asp-action="Delete" asp-route-id="@item.Id">Elimina</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>