@using it.lucaporfiri.appweb.core.web.ViewModels
@using static it.lucaporfiri.appweb.core.web.Models.Atleta
@model it.lucaporfiri.appweb.core.web.ViewModels.AtletaDetailViewModel

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dettaglio Atleta - Virtus Coaching</title>
</head>
<body>

    <div class="dashboard-container">

        <header class="page-header">
            <h2><i class="fas fa-user"></i> Dettaglio Atleta</h2>
            <div>
                <a href="/Atleta/Index" class="btn btn-secondary"><i class="fas fa-list"></i> Elenco Atleti</a>
                <a href="/Home/Index" class="btn btn-secondary"><i class="fas fa-home"></i> Torna alla Dashboard</a>
            </div>
            
        </header>

        <!-- SEZIONE PRINCIPALE DATI ATLETA -->
        <section>
            <div class="profile-header">
                <div class="profile-header-info">
                    <h1 id="athlete-name">
                        @Html.DisplayFor(model => model.NomeCompleto)                        
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn">
                            <i class="fas fa-edit"></i>
                        </a>
                    </h1>
                    <div class="badges">
                        @{
                            var statoClass = Model!.Stato switch
                            {
                                StatoCliente.Attivo => "status-ok",
                                StatoCliente.NonAttivo => "status-scaduto",
                                _ => "status-notdefined"
                            };
                        }
                        <span id="athlete-status-badge" class="status @statoClass">@Html.DisplayFor(modelItem => Model.Stato)</span>
                        @{
                            var tipoClass = Model!.Tipo.ToString().ToLower() switch
                            {
                                "personal" => "status-personal",
                                "corso" => "status-corso",
                                "solascheda" => "status-soloscheda",
                                _ => "status-notdefined"
                            };
                        }
                        <span class="status @tipoClass">@Html.DisplayFor(modelItem => Model.Tipo)</span>
                    </div>
                </div>

                <div class="profile-actions">
                    <div class="state-buttons">
                        <p style="text-align: right; font-size: 0.8em; color: var(--text-secondary); margin: 0 0 5px 0;">Modifica Stato:</p>
                        <button id="btnSetAttivo" class="btn btn-secondary"><i class="fas fa-toggle-on"></i> Attivo</button>
                        <button id="btnSetNonAttivo" class="btn btn-secondary"><i class="fas fa-toggle-off"></i> Non Attivo</button>
                    </div>

                    <div id="save-actions" class="form-actions hidden" style="border: none; margin-top: 0; padding-top: 0;">
                        <form id="formStatoAtleta" asp-controller="Atleta" asp-action="AggiornaStato" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" id="atleta-status-input" name="newState" value="">
                            <button class="btn btn-primary"><i class="fas fa-save"></i> Salva Modifiche</button>
                        </form>

                    </div>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-field">
                    <label>Email</label>
                    @if (Model.Email != null)
                    {
                        <span class="value">@Html.DisplayFor(modelItem => Model.Email)</span>
                    }else
                    {
                        <span>-</span>    
                    }
                </div>
                <div class="form-field">
                    <label>Telefono</label>
                    @if (Model.Telefono != null)
                    {
                        <span class="value">@Html.DisplayFor(modelItem => Model.Telefono)</span>

                    }
                    else
                    {
                        <span>-</span>    
                    }
                </div>
                <div class="form-field">
                    <label>Età</label>
                    @if (Model.Eta != null)
                    {
                        <span class="value">@Html.DisplayFor(modelItem => Model.Eta)</span>
                    }else
                    {
                        <span>-</span>
                    }
                </div>
                <div class="form-field">
                    <label>Data Inizio Iscrizione</label>
                    @if (Model.DataIscrizioneAtleta != DateTime.MinValue)
                    {
                        <span class="value">@Html.DisplayFor(modelItem => Model.DataIscrizioneAtleta)</span>
                    }else
                    {
                        <span>-</span>
                    }

                </div>
            </div>
        </section>

        <!-- SEZIONE CRONOLOGIA ABBONAMENTI -->
        <section>
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h2><i class="fas fa-calendar-check"></i> Cronologia Abbonamenti</h2>
                <a href="/Abbonamento/Create?atletaId=@Model.Id" class="btn btn-secondary"><i class="fas fa-plus"></i> Aggiungi Abbonamento</a>
            </div>

            <div class="history-list">

                @foreach (AbbonamentoDetailViewModel item in Model.CronologiaAbbonamenti.OrderByDescending(s => s.abbonamento.DataFine))
                {
                    <div class="history-item">
                        <div class="history-item-details">
                            <strong>@item.abbonamento.Nome</strong>
                            <span class="meta">@item.abbonamento.DataInizio.ToString("dd/MMM/yyyy") - @item.abbonamento.DataFine.ToString("dd/MMM/yyyy")</span>
                        </div>
                        <div class="history-item-actions">
                            @{
                                var statoAbbonamento = item.statoAbbonamento.ToString().ToLower() switch
                                {
                                    "valido" => "status-ok",
                                    "scaduto" => "status-scaduto",
                                    _ => "status-notdefined"
                                }; 
							}
                            <span class="status @statoAbbonamento">@Html.DisplayFor(modelItem => item.statoAbbonamento)</span>
                            <a asp-action="Details" asp-controller="Abbonamento" asp-route-id="@item.abbonamento.Id" class="btn">
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </section>

        <!-- SEZIONE CRONOLOGIA SCHEDE -->
        <section>
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h2><i class="fas fa-dumbbell"></i> Cronologia Schede</h2>
                <a href="/Scheda/Create?atletaId=@Model.Id" class="btn btn-secondary"><i class="fas fa-upload"></i> Carica Scheda</a>
            </div>

            <div class="history-list">
                @foreach (SchedaAllenamentoViewModel item in Model.CronologiaSchede.OrderByDescending(s => s.Scheda.DataFine))
                {
                    <div class="history-item">
                        <div class="history-item-details">
                            <strong>@item.Scheda.Nome</strong>
                            <span class="meta">@item.Scheda.Descrizione</span>
                            <span class="meta">
                                @if (item.Scheda.DataInizio.HasValue)
                                {
                                    @item.Scheda.DataInizio.Value.ToString("dd/MMM/yyyy")
                                }
                                - @item.Scheda.DataFine.ToString("dd/MMM/yyyy")</span>
                        </div>
                        <div class="history-item-actions">
                            @{
                                var statoScheda = item.Stato.ToString().ToLower() switch
                                {
                                    "attiva" => "status-ok",
                                    "scaduta" => "status-scaduto",
                                    _ => "status-notdefined"
                                };
                            }
                            @{
                                string? fileName = item.Scheda.NomeFileOriginale;
                                string? fileIcon = "fa-file";
                                if (!string.IsNullOrEmpty(fileName))
                                {
                                    var ext = System.IO.Path.GetExtension(fileName).ToLower();
                                    fileIcon = ext switch
                                    {
                                        ".pdf" => "fa-file-pdf",
                                        ".doc" or ".docx" => "fa-file-word",
                                        ".xls" or ".xlsx" or ".csv" => "fa-file-excel",
                                        ".jpg" or ".jpeg" or ".png" => "fa-file-image",
                                        _ => "fa-file"
                                    };
                                }
                            }
                            @if (!string.IsNullOrEmpty(item.Scheda.NomeFileOriginale))
                            {
                                <a href="@Url.Action("visualizza", "Scheda", new { id = item.Scheda.Id })" class="file-link">
                                    <i class="fas @fileIcon"></i> @item.Scheda.NomeFileOriginale
                                </a>
                            }
                            <span class="status @statoScheda">@Html.DisplayFor(modelItem => item.Stato)</span>
                            <a asp-action="Details" asp-controller="Scheda" asp-route-id="@item.Scheda.Id" class="btn">
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btnSetAttivo = document.getElementById('btnSetAttivo');
            const btnSetNonAttivo = document.getElementById('btnSetNonAttivo');
            const saveActions = document.getElementById('save-actions');
            const hiddenInput = document.getElementById('atleta-status-input');
            const statusBadge = document.getElementById('athlete-status-badge');

            function changeStatus(newStatus, newStatusText, newStatusClass) {
                hiddenInput.value = newStatus;

                saveActions.classList.remove('hidden');

                statusBadge.textContent = newStatusText;
                statusBadge.className = 'status ' + newStatusClass;
            }

            btnSetAttivo.addEventListener('click', () => {
                changeStatus('Attivo', 'Attivo', 'status-ok');
            });

            btnSetNonAttivo.addEventListener('click', () => {
                changeStatus('NonAttivo', 'Non Attivo', 'status-scaduto');
            });
        });
    </script>

</body>
</html>