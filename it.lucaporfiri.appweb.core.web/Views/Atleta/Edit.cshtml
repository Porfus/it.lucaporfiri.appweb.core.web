@model it.lucaporfiri.appweb.core.web.Models.Atleta


<div class="dashboard-container">
    <section>
        <h2><i class="fas fa-user-edit"></i> Modifica Atleta</h2>
        
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-grid">

                <div class="form-field">
                    <label asp-for="Nome">Nome<span class="required-asterisk">*</span></label>
                    <input asp-for="Nome" placeholder="es. Mario" />
                    <span asp-validation-for="Nome" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Cognome">Cognome<span class="required-asterisk">*</span></label>
                    <input asp-for="Cognome" placeholder="es. Rossi" />
                    <span asp-validation-for="Cognome" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="AnnoDiNascita"></label>
                    <input asp-for="AnnoDiNascita" type="date" placeholder="es. 1990" />
                    <span asp-validation-for="AnnoDiNascita" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" placeholder="es. m.rossi@email.com" />
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Telefono"></label>
                    <input asp-for="Telefono" type="tel" placeholder="es. 3331234567" />
                    <span asp-validation-for="Telefono" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="DataInizioIscrizione"></label>
                    <input asp-for="DataInizioIscrizione" type="date" />
                    <span asp-validation-for="DataInizioIscrizione" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Tipo">Categoria Atleta<span class="required-asterisk">*</span></label>
                    <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<Atleta.TipoCliente>()">
                        <option value="">Seleziona una categoria...</option>
                    </select>
                    <span asp-validation-for="Tipo" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Stato">Stato Atleta<span class="required-asterisk">*</span></label>
                    <select asp-for="Stato" asp-items="Html.GetEnumSelectList<Atleta.StatoCliente>()">
                        <option value="">Seleziona uno stato...</option>
                    </select>
                    <span asp-validation-for="Stato" class="validation-error"></span>
                </div>

			</div>
            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Annulla
                </a>
				<input type="submit" value="Salva Atleta" class="btn btn-primary" />
			</div>
        </form>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
