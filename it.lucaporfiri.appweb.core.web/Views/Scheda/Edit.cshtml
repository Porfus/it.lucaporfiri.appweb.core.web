@using it.lucaporfiri.appweb.core.web.ViewModels
@model SchedaAllenamentoEditViewModel

@{
    ViewData["Title"] = "Modifica Scheda di Allenamento";
}

<div class="dashboard-container">
    <header class="page-header-details">
        <div class="header-content">
            <a asp-action="Details" asp-controller="Scheda" asp-route-id="@Model.Scheda.Id" class="btn-back" title="Torna alla scheda">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div class="header-title">
                <h1>
                    <i class="fa-solid fa-pen-to-square"></i>
                    Modifica Scheda
                </h1>
                <p class="subtitle">@Model.Scheda.Nome</p>
            </div>
        </div>
    </header>
    <section>
        <form asp-action="Edit" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <input type="hidden" asp-for="Scheda.Id" />

            <div class="form-grid-two-column">
                <div class="form-field">
                    <label asp-for="Scheda.Nome">Nome Scheda<span class="required-asterisk">*</span></label>
                    <input asp-for="Scheda.Nome" />
                    <span asp-validation-for="Scheda.Nome" class="validation-error"></span>
                </div>
                <div class="form-field full-width">
                    <label asp-for="Scheda.Descrizione" class="control-label">Descrizione Scheda</label>
                    <textarea asp-for="Scheda.Descrizione" class="form-control form-control-large"></textarea>
                    <span asp-validation-for="Scheda.Descrizione" class="validation-error"></span>
                </div>
                
                <div class="form-field">
                    <label asp-for="Scheda.DataInizio">Data Inizio<span class="required-asterisk">*</span></label>
                    <input asp-for="Scheda.DataInizio" type="date" class="form-control" />
                    <span asp-validation-for="Scheda.DataInizio" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="Scheda.DataFine">Data Fine<span class="required-asterisk">*</span></label>
                    <input asp-for="Scheda.DataFine" class="form-control" type="date" />
                    <span asp-validation-for="Scheda.DataFine" class="validation-error"></span>
                </div>
                <div class="form-field full-width">
                    <label asp-for="Scheda.AtletaId">Atleta<span class="required-asterisk">*</span></label>
                    <select asp-for="Scheda.AtletaId" asp-items="ViewBag.AtletaId" class="form-control">
                        <option value="">-- Seleziona un atleta --</option>
                    </select>
                    <span asp-validation-for="Scheda.AtletaId" class="validation-error"></span>
                </div>
                <div class="form-field full-width" >
                    <label>Carica Scheda (PDF, Word, JPEG...)</label>
                    @{
                        string? fileName = Model.Scheda.NomeFileOriginale;
                        string? fileIcon = "fa-file";
                        if (!string.IsNullOrEmpty(fileName))
                        {
                            var ext = System.IO.Path.GetExtension(fileName).ToLower();
                            fileIcon = ext switch
                            {
                                ".pdf" => "fa-file-pdf",
                                ".doc" or ".docx" => "fa-file-word",
                                ".xls" or ".xlsx" or ".csv" => "fa-file-excel",
                                ".jpg" or ".jpeg" or ".png" => "fa-file-image",
                                _ => "fa-file"
                            };
                        }
                    }
                    @if (!string.IsNullOrEmpty(Model.Scheda.NomeFileOriginale))
                    {
                        <div class="history-item">
                            <div class="history-item-details">
                                <a asp-action="Visualizza" asp-route-id="@Model.Scheda.Id" class="file-link">
                                    <i class="fas @fileIcon"></i>
                                    @Model.Scheda.NomeFileOriginale
                                </a>
                                <span class="meta">File attualmente caricato. Caricane uno nuovo per sostituirlo.</span>
                            </div>
                        </div>
                    }
                    <input asp-for="NuovoFileScheda" type="file" />
                    <span asp-validation-for="NuovoFileScheda" class="validation-error"></span>
                </div>
            </div>
            <div class="form-actions">
                <div></div>
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-save"></i>
                    Salva Modifiche
                </button>
            </div>

        </form>
    </section>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}