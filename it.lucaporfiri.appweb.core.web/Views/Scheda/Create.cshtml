@using it.lucaporfiri.appweb.core.web.ViewModels
@model SchedaCreateViewModel

<div class="dashboard-container">
    <section>
        <h2><i class="fa-solid fa-file-lines"></i> Crea Nuova Scheda</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
            <div class="form-grid-two-column">
                <div class="form-field">
                    <label asp-for="Nome" class="control-label">Nome Scheda</label>
                    <input asp-for="Nome" class="form-control" placeholder="Mesociclo Forza Gennaio..." />
                    <span asp-validation-for="Nome" class="validation-error"></span>
                </div>
                <div class="form-field full-width">
                    <label asp-for="Descrizione" class="control-label">Descrizione Scheda</label>
                    <textarea asp-for="Descrizione" class="form-control form-control-large" placeholder="Esempio: Focus su panca e stacco. 3 sedute a settimana con scarico attivo nella quarta settimana. RPE 8-9..."></textarea>
                    <span asp-validation-for="Descrizione" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="DataInizio" class="control-label">Data Inizio <span class="required-asterisk">*</span></label>
                    <input asp-for="DataInizio" type="date" class="form-control" id="dataInizio" />
                    <span asp-validation-for="DataInizio" class="validation-error"></span>
                </div>
                <div class="form-field">
                    <label asp-for="DataFine" class="control-label">
                        Data Fine <span class="required-asterisk">*</span>
                    </label>
                    @{

                        var dataFineValue = Model.DataFine == DateTime.MinValue ? "" : Model.DataFine.ToString("yyyy-MM-dd");
                    }
                    <input asp-for="DataFine" type="date" class="form-control" value="@dataFineValue" id="dataFine" />
                    <span asp-validation-for="DataFine" class="validation-error"></span>
                </div>
                <!-- SELETTORI RAPIDI DI DURATA -->
                <div class="form-field">
                    <label class="form-label d-block">Imposta scadenza rapida:</label>
                    <div class="btn-group" role="group" aria-label="Selettori durata">
                        <button type="button" class="btn btn-secondary" id="btn1Settimana">+ 1 Settimana</button>
                        <button type="button" class="btn btn-secondary" id="btn2Settimane">+ 2 Settimane</button>
                        <button type="button" class="btn btn-secondary" id="btn1Mese">+ 1 Mese</button>
                    </div>
                </div>
                <div class="form-field mb-3">
                    <label asp-for="FileCaricato" class="control-label">Carica Scheda (PDF, Word, JPEG...)</label>
                    <input asp-for="FileCaricato" type="file" class="form-control" />
                    <span asp-validation-for="FileCaricato" class="text-danger"></span>
                </div>
                @if (Model.AtletaId > 0 && !String.IsNullOrEmpty(Model.NomeAtleta))
                {
                    <div class="form-field full-width">
                        <label>Atleta</label>
                        <div class="value" style="padding: 12px 15px; background-color: var(--background); border-radius: 8px;">
                            <i class="fas fa-user-check"></i> @Model.NomeAtleta
                        </div>
                        <input type="hidden" asp-for="AtletaId" />
                        <input type="hidden" name="NomeAtleta" value="@Model.NomeAtleta" />
                    </div>
                }else
                {
                    <div class="form-field full-width">
                        <label asp-for="AtletaId" class="control-label">
                            Atleta <span class="required-asterisk">*</span>
                        </label>
                        <select asp-for="AtletaId" class="form-control" asp-items="ViewBag.AtletaId">
                            <option value="">Seleziona un atleta...</option>
                        </select>
                        <span asp-validation-for="AtletaId" class="validation-error"></span>
                    </div>
                }

            </div>                
            <div class="form-actions">
                <div>
                    @if (Model.AtletaId > 0 && !string.IsNullOrEmpty(Model.NomeAtleta))
                    {
                        <a asp-action="Details" asp-controller="Atleta" asp-route-id="@Model.AtletaId" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i>Torna a @Model.NomeAtleta
                        </a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Torna all'Elenco Schede
                        </a>
                    }
                </div>
                <button type="submit" value="Create" class="btn btn-primary">
                    <i class="fas fa-check"></i> Crea Scheda
                </button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            const dataInizioInput = $('#dataInizio');
            const dataFineInput = $('#dataFine');

            function setEndDate(weeksToAdd = 0, monthsToAdd = 0) {
                const startDateValue = dataInizioInput.val();
                if (!startDateValue) {
                    alert("Per favore, imposta prima una data di inizio valida.");
                    return;
                }
                const startDate = new Date(startDateValue);
                if (weeksToAdd > 0) {
                    startDate.setDate(startDate.getDate() + (weeksToAdd * 7));
                }
                // Aggiungi mesi
                if (monthsToAdd > 0) {
                    startDate.setMonth(startDate.getMonth() + monthsToAdd);
                }

                const formattedEndDate = startDate.toISOString().split('T')[0];

                dataFineInput.val(formattedEndDate);
            }

            $('#btn1Settimana').on('click', function() {
                setEndDate(1, 0);
            });

            $('#btn2Settimane').on('click', function() {
                setEndDate(2, 0);
            });

            $('#btn1Mese').on('click', function() {
                setEndDate(0, 1);
            });

        });
    </script>
}