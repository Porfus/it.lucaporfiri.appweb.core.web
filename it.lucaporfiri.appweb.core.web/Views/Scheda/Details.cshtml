@using it.lucaporfiri.appweb.core.web.ViewModels
@using static it.lucaporfiri.appweb.core.web.ViewModels.SchedaAllenamentoViewModel
@model SchedaAllenamentoViewModel

@{
    ViewData["Title"] = "Dettaglio Scheda di Allenamento";

    // --- Logica di Calcolo per lo Stato e il Countdown ---
    // Usiamo lo stato già calcolato nel ViewModel
    bool isScaduta = Model.Stato == StatoScheda.Scaduta;
    bool isNonDefinita = Model.Stato == StatoScheda.NonDefinita;
    var giorniRimanenti = (Model.Scheda.DataFine - DateTime.Today).Days;
    int giorniRimanentiAttiva=0;
    if(Model.Scheda.DataInizio.HasValue)
    {
        giorniRimanentiAttiva = (Model.Scheda.DataInizio.Value - DateTime.Today).Days;
    }
    string statusClass;
    string statusText;
    if (isNonDefinita)
    {
        statusClass = "status-notdefined";
        statusText = "Non Definita";
    }
    else if (isScaduta)
    {
        statusClass = "status-scaduto";
        statusText = "Scaduta";
    }
    else
    {
        statusClass = "status-ok";
        statusText = "Attiva";
    }
    string countdownText;

    if (isScaduta)
    {
        countdownText = $"Scaduta da {-giorniRimanenti} giorni";
    }
    else if (isNonDefinita)
    {
        if (Model.Scheda.DataInizio >= DateTime.Today)
        {
            countdownText = $"Attiva tra {giorniRimanentiAttiva} giorni";
        }
        else
        {
            countdownText = "-";    
        }
    }
    else if (giorniRimanenti == 0)
    {
        countdownText = "Scade Oggi";
    }
    else
    {
        countdownText = $"Scade tra {giorniRimanenti + 1} giorni";
    }
}
<style>

    /* =========== NUOVI STILI SPECIFICI PER QUESTA PAGINA =========== */

    /* Sezione per l'azione principale (download file) */
    .main-action-section {
        margin-bottom: 30px;
        text-align: center;
    }

    .btn-visualizza {
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 25px 40px;
        border: 2px dashed var(--brand-red);
        border-radius: 12px;
        background-color: var(--brand-red-light);
        color: var(--brand-red);
        text-decoration: none;
        transition: all 0.2s ease-in-out;
    }

        .btn-visualizza:hover {
            border-style: solid;
            background-color: var(--brand-red);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(217, 35, 45, 0.2);
        }

        .btn-visualizza i {
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .btn-visualizza span {
            font-size: 1.2em;
            font-weight: 700;
        }

        .btn-visualizza small {
            font-size: 0.9em;
            margin-top: 5px;
            opacity: 0.8;
        }

    /* Stile per quando non c'è un file allegato */
    .main-action-section.no-file {
        padding: 25px;
        border-radius: 12px;
        background-color: var(--background);
        color: var(--text-secondary);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

        .main-action-section.no-file i {
            font-size: 2.5em;
        }

        .main-action-section.no-file span {
            font-weight: 600;
        }


    /* Sezione per la descrizione */
    .description-section {
        margin-top: 30px;
    }

        .description-section .label {
            display: block;
            font-size: 0.9em;
            color: var(--text-secondary);
            margin-bottom: 8px;
            text-transform: uppercase;
            font-weight: 600;
        }

        .description-section p {
            font-size: 1em;
            line-height: 1.6;
            background-color: var(--background);
            padding: 15px;
            border-radius: 8px;
            margin: 0;
        }
</style>
<div class="dashboard-container">

    <!-- =========== HEADER DELLA PAGINA =========== -->
    <header class="page-header-details">
        <div class="header-content">
            <a asp-action="Details" asp-controller="Atleta" asp-route-id="@Model.Scheda.AtletaId" class="btn-back" title="Torna al profilo atleta">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div class="header-title">
                <h1>Dettaglio Scheda</h1>
                <p class="subtitle">@Model.Scheda.Nome</p>
            </div>
        </div>
    </header>

    <!-- =========== CARD PRINCIPALE =========== -->
    <section class="details-card">

        <!-- ===== SEZIONE AZIONE PRINCIPALE: SCARICA/VISUALIZZA SCHEDA ===== -->
        @if (!string.IsNullOrEmpty(Model.Scheda.NomeFileArchiviato))
        {
            <div class="main-action-section">
                <a asp-action="Visualizza" asp-controller="Scheda" asp-route-id="@Model.Scheda.Id" class="btn-visualizza" target="_blank">
                    <i class="fas fa-file-arrow-down"></i>
                    <span>Visualizza/Scarica Scheda</span>
                    <small>@Model.Scheda.NomeFileOriginale</small>
                </a>
            </div>
        }
        else
        {
            <div class="main-action-section no-file">
                <i class="fas fa-file-circle-xmark"></i>
                <span>Nessun file allegato per questa scheda.</span>
            </div>
        }

        <!-- Linea di separazione -->
        <hr class="separator" />

        <!-- Riepilogo Visivo con le info chiave -->
        <div class="info-grid">
            <div class="info-item">
                <span class="label">Stato</span>
                <span class="status @statusClass">@statusText</span>
            </div>
            <div class="info-item">
                <span class="label">Countdown Scadenza</span>
                <strong class="value">@countdownText</strong>
            </div>
            <div class="info-item">
                <span class="label">Validità Dal</span>
                <strong class="value">@Model.Scheda.DataInizio?.ToString("dd MMMM yyyy")</strong>
            </div>
            <div class="info-item">
                <span class="label">Validità Fino Al</span>
                <strong class="value">@Model.Scheda.DataFine.ToString("dd MMMM yyyy")</strong>
            </div>
        </div>

        <!-- Descrizione (se presente) -->
        @if (!string.IsNullOrWhiteSpace(Model.Scheda.Descrizione))
        {
            <div class="description-section">
                <span class="label">Descrizione / Note</span>
                <p>@Model.Scheda.Descrizione</p>
            </div>
        }

        <!-- Linea di separazione -->
        <hr class="separator" />

        <!-- Link all'atleta associato -->
        <div class="athlete-link-section">
            <span class="label">Scheda di:</span>
            <a asp-action="Details" asp-controller="Atleta" asp-route-id="@Model.Scheda.AtletaId">
                <i class="fas fa-user-circle"></i>
                <span>@Model.Scheda.Cliente?.Nome @Model.Scheda.Cliente?.Cognome</span>
            </a>
        </div>

        <!-- Sezione Azioni Secondarie -->
        <footer class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Scheda.Id" class="btn btn-primary">
                <i class="fas fa-pencil-alt"></i> Modifica
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Scheda.Id" class="btn btn-danger-outline">
                <i class="fas fa-trash-alt"></i> Elimina
            </a>
        </footer>
    </section>
</div>
