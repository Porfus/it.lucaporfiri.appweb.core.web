<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - it.lucaporfiri.appweb.core.web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@700&family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Font Awesome (Icone) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/it.lucaporfiri.appweb.core.web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>

    <header>
        <div class="dashboard-container">
            <div class="dashboard-header">
                <div class="header-logo">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-dumbbell" style="font-size: 35px; color: var(--brand-red);"></i>
                    </a>
                    <div class="header-logo-text">
                        <a asp-controller="Home" asp-action="Index" style="text-decoration: none; color: inherit;">
                            <h1>Gestore Atleti</h1>
                        </a>
                    </div>
                </div>
                <div class="header-actions">

                <nav class="main-nav">
                    <ul>
                        <li><a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li><a class="nav-link" asp-controller="Atleta" asp-action="Index">Atleti</a></li>
                        <li><a class="nav-link" asp-controller="Abbonamento" asp-action="Index">Abbonamenti</a></li>
                        <li><a class="nav-link" asp-controller="Scheda" asp-action="Index">Schede</a></li>
                    </ul>
                </nav>
                    <button class="theme-switcher" id="theme-switcher" aria-label="Cambia tema">
                        <i class="fas fa-moon"></i>
                        <i class="fas fa-sun"></i>
                    </button>

                    <a href="/Home/Login" class="btn-user-profile" aria-label="Profilo utente">
                        <i class="fa-solid fa-user"></i>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="dashboard-footer">
        <div class="footer-copyright">
            © @DateTime.Now.Year - Gestore Atleti - Sviluppato da Luca Porfiri
        </div>
        <div class="footer-links">
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <!-- Script essenziali -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
